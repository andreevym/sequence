<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Имя"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:text="Дата"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:contentDescription="logo"
        android:src="@drawable/money"
        android:id="@+id/upImageView"
        android:onClick="upUser"
        android:layout_alignTop="@+id/textView1"
        android:layout_toLeftOf="@+id/deleteImageView"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:contentDescription="trash"
        android:src="@drawable/trash"
        android:id="@+id/deleteImageView"
        android:layout_alignTop="@+id/upImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/upImageView"
        android:layout_marginRight="10dp" />

</RelativeLayout>